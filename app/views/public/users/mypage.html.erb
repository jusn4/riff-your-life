<div class = "container my-5">
  <div class = "row">
    <div class="col-3">
      <%= image_tag @user.get_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>
              <%= link_to user_followings_path(@user) do %>
                <%= @user.followings.count %> Follows
              <% end %>
            </th>
            <th>
              <%= link_to user_followers_path(@user) do %>
                <%= @user.followers.count %> Followed
              <% end %>
            </th>
          </tr>
          <tr>
            <th><%= link_to "編集", edit_user_path(@user), class:"btn btn-md btn-success" %></th>
            <th><%= link_to "退会", user_path(@user), method: :delete, class:"btn btn-md btn-danger" %></th>
          </tr>
        </tbody>
      </table>
    </div>
    <div class = "col-8 offset-1">
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_image(50, 50) %></td>
            <td><%= post.title %></td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td><%= link_to "編集", edit_post_path(post),class:"btn btn-md btn-success" %></td>
            <td><%= link_to "削除", post_path(post), method: :delete, class:"btn btn-md btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

