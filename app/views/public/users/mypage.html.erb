<div class = "container my-5">
  <div class = "row">
    <div class="col-3">
      <%= image_tag @user.get_image, size:"100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集", edit_user_path(@user),class:"btn btn-md btn-success" %>
    </div>
    
    <div class = "col-8 offset-1">
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_image, size:"50x50" %></td>
            <td><%= post.title %></td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td><%= link_to "編集", edit_post_path(post),class:"btn btn-md btn-success" %></td>
            <td><%= link_to "削除", post_path(post), method: :delete, class:"btn btn-md btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

