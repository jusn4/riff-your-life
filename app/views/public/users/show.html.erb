<div class = "container my-5">
  <div class = "row">
    <div class="col-3">
      <%= image_tag @user.get_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= simple_format(h(@user.introduction)) %></th>
          </tr>
          <tr>
            <th>
              <%= link_to user_followings_path(@user) do %>
                <%= @user.followings.count %> Follows
              <% end %>
            </th>
            <th>
              <%= link_to user_followers_path(@user) do %>
                <%= @user.followers.count %> Followed
              <% end %>
            </th>
          </tr>
          <% if current_user != @user %>
            <tr>
              <th>
                <% if current_user.following?(user) %>
                  <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-info" %>
                <% else %>
                  <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %>
                <% end %>
                <% if @isRoom == true %>
                  <%= link_to room_path(@room_id), class:"btn btn-sm rounded-pill" do %>
                    <i class="fa-solid fa-comment-dots"></i>
                  <% end %>
                <% else %>
                  <%= form_for @room do |f| %>
                    <%= fields_for @entry do |e| %>
                      <%= e.hidden_field :user_id, value: @user.id %>
                    <% end %>
                    <%= f.submit, class:"btn btn-sm rounded-pill" do %>
                      <i class="fa-solid fa-comment-medical"></i>
                    <% end %>
                  <% end %>
                <% end %>
              </th>
              <th>
                
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class = "col-8 offset-1">
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_image(50, 50) %></td>
            <td><%= post.title %></td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

