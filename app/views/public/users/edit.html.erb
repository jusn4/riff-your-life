<div class = "container">
  <div class = "row">
    <h2>プロフィール編集</h2>
    <%= form_with model: @user do |f| %>
      <label>Name</label>
      <%= f.text_field :name, autofocus: true, placeholder:"名前" %>
      <label>introduction</label>
      <%= f.text_field :introduction, placeholder:"自己紹介" %>
      <%= f.file_field :image, accept: "image/*" %>
      <%= f.submit "変更を保存" %>
    <% end %>
  </div>
</div>