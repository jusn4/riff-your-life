<div class = "container my-5">
  <h2>プロフィール編集</h2>
  <%= render "layouts/errors", obj: @user %>
  <%= form_with model: @user do |f| %>
    <div class="form-group col-4">
      <label>Name</label>
      <%= f.text_field :name, autofocus: true, placeholder:"Name", class:"form-control" %>
    </div>
    <div class="form-group col-4">
       <label>Introduction</label>
      <%= f.text_field :introduction, placeholder:"Introduction", class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <label>Image</label>
      <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
    </div>
    <div class="col-4">
      <button type="submit" class="btn btn-sm btn-success">変更を保存</button>
    </div>
    <% end %>
  </div>
</div>