<div class = "container my-5">
  <div class="h4 pb-2 mb-4 border-bottom border-secondary">
    Edit your Profile
  </div>
  <%= render "layouts/errors", obj: @user %>
  <%= form_with model: @user do |f| %>
    <div class="form-group col-4">
      <label>Name</label>
      <%= f.text_field :name, autofocus: true, placeholder:"Name", class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <label>Introduction</label>
      <%= f.text_area :introduction, placeholder:"Introduction", class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <label>Image</label>
      <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
    </div>
    <div class="col-4">
      <button type="submit" class="btn btn-sm btn-success">Save changes</button>
    </div>
    <% end %>
  </div>
</div>