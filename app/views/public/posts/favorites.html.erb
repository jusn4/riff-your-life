<div class = "container my-5">
  <div class="h4 pb-2 mb-4 border-bottom border-secondary col-3">
    Your favorite riffs
  </div>
  <div class = "row">
      <table class = "table col-9">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th></th>
            <th>Creater</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td class="align-middle"><%= image_tag post.get_image.variant( resize: "50x50^", gravity: "center", crop: "50x50+0+0" ) %></td>
            <td class="align-middle">
              <%= link_to post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td class="align-middle"><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td class="align-middle">
              <div>
                <i class="fa-regular fa-comment"></i>
                <%= post.comments.count %>
              </div>
              <div class=<%= "favorite-" + post.id.to_s %>>
                <%= render 'public/favorites/heart', post: post %>
              </div>
            </td>
            <td class="align-middle">
              <%= link_to user_path(post.user.id) do %>
                <%= image_tag post.get_image.variant( resize: "50x50^", gravity: "center", crop: "50x50+0+0" ) %>
                <%= post.user.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <div class="mx-auto">
      <%= paginate(@posts) %>
    </div>
  </div>
</div>