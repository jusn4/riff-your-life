<div class = "container my-5">
  <div class = "row">
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th>Creater</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_image, size:"50x50" %></td>
            <td><%= post.title %></td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td><%= image_tag post.user.get_image, size:"50x50" %>
            <%= post.user.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
