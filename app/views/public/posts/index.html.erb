<div class = "container my-5">
  <div class = "row">
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th>Creater</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_image(50, 50) %></td>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td>
              <%= link_to user_path(post.user.id) do %>
                <%= image_tag post.get_image(50, 50) %>
                <%= post.user.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
