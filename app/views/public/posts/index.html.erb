<div class = "container my-5">
  <div class="row">
    <div class="d-flex form-group">
      <form class ="form-inline">
        <%= form_with url: posts_path, local: true, method: :get do |f| %>
          <%= f.text_field :word, placeholder:"Search by title", class: "form-control" %>
          <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </form>
      <% if params[:word].present? %>
        <div class="d-flex col-2">
          <%= link_to "Clear", posts_path, class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class = "row">
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th></th>
            <th>Creater</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td class="align-middle"><%= image_tag post.get_image(50, 50) %></td>
            <td class="align-middle">
              <%= link_to post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td class="align-middle"><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td class="align-middle">
              <i class="fa-regular fa-comment"></i>
              <%= post.comments.count %>
            </td>
            <td class="align-middle">
              <%= link_to user_path(post.user.id) do %>
                <%= image_tag post.get_image(50, 50) %>
                <%= post.user.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
