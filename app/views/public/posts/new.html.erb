<div class = "container">
  <div class = "row">
    <h1>新規投稿フォーム</h1>
    <%= form_with model: @post do |f| %>
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>リフ</h4>
      <%= f.file_field :music, :size => 140 %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>詳細</h4>
      <%= f.text_area :body %>
      <%= f.submit '投稿' %>
      <% end %>
  </div>
</div>