<h2>投稿編集</h2>
<%= form_with model: @post do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true, placeholder:"名前"%>
  <label>Body</label>
  <%= f.text_field :body, placeholder:"詳細"%>
  <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>