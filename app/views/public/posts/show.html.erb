<div class = "container my-5">
  <div class = "row">
    <div class="col-5">
      <%= image_tag @post.get_image(400, 400) %>

    </div>

    <div class = "col-7">
      <table class="table">
        <tbody>
          <tr>
            <th>Title</th>
            <th><%= @post.title %></th>
          </tr>
          <tr>
            <th></th>
            <th><%= audio_tag url_for(@post.music), controls: true %></th>
          </tr>
          <tr>
            <th>Body</th>
            <th><%= simple_format(h(@post.body)) %></th>
          </tr>
          <tr>
            <th>Creater</th>
            <th>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_image(30, 30) %>
                <%= @user.name %>
              <% end %>
              <% if current_user != @user %>
                <% if current_user.following?(@user) %>
                  <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
                <% else %>
                  <%= link_to "Follow", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
                <% end %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <%= form_with model: [@post, @comment] do |f| %>
        <div class="row align-items-center">
          <%= f.text_field :body, placeholder: "Write a comment", class:"form-control col-11 rounded-pill" %>
          <button type="submit" class="btn btn-md btn-outline-secondary col-1 rounded-pill">
            <i class="fa-regular fa-paper-plane"></i>
          </button>
        </div>
      <% end %>
      <div class="border-bottom py-1 row align-items-center">
        <div class="col-2">
          <i class="fa-regular fa-comment"></i>
          <%= @post.comments.count %>
        </div>
        <div class="col-2">
          <div class=<%= "favorite-" + @post.id.to_s %>>
            <%= render 'public/favorites/heart', post: @post %>
          </div>
        </div>
        <div>
          <i class="fa-solid fa-tags"></i>
          <% @post.tags.each do |tag| %>
            <%= link_to posts_path(tag_id: tag.id) do %>
              #<%= tag.name %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <% @post.comments.each do |comment| %>
        <div class="col-1">
          <%= image_tag comment.user.get_image(50,50) %>
        </div>
        <div class="col-11">
          <strong><%= comment.user.name %></strong>
          at <%= comment.created_at.strftime('%Y/%m/%d') %><br>
          <%= comment.body %>
          <% if current_user = comment.user %>
            <p class="text-right">
               <%= link_to "delete", post_comment_path(comment.post, comment), method: :delete %>
            </p>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

