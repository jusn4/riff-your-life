<div class = "container my-5">
  <div class = "row">
    <div class="col-5">
      <%= image_tag @post.get_image(400, 400) %>

    </div>

    <div class = "col-7">
      <table class="table">
        <tbody>
          <tr>
            <th>Title</th>
            <th><%= @post.title %></th>
          </tr>
          <tr>
            <th></th>
            <th><%= audio_tag url_for(@post.music), controls: true %></th>
          </tr>
          <tr>
            <th>Body</th>
            <th><%= @post.body %></th>
          </tr>
          <tr>
            <th>Creater</th>
            <th>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_image(50, 50) %>
                <%= @user.name %>
              <% end %>
              <% if current_user != @user %>
                <% if current_user.following?(@user) %>
                  <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
                <% else %>
                  <%= link_to "Follow", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
                <% end %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="form-group-row">
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :body, placeholder: "コメントをここに", class:"form-control col-10" %>
          <%= f.submit "S", class:"btn btn-sm btn-primary col-2" %>
        <% end %>
      </div>
      <div class="border-bottom">
        <%= @post.comments.count %>comments
      </div>
      <div class="row">
        <% @post.comments.each do |comment| %>
        <div class="col-1">
          <%= image_tag comment.user.get_image(50,50) %>
        </div>
        <div class="col-11">
          <strong><%= comment.user.name %></strong>
          at <%= comment.created_at.strftime('%Y/%m/%d') %><br>
          <%= comment.body %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

