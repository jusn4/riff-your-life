<div class = "container my-5">
  <div class = "row">
    <div class="col-3">
      <%= image_tag @user.get_image, size:"100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th><%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-sm btn-success" %></th>
            <th><%= link_to "Delete", admin_user_path(@user), method: :delete, class: "btn btn-sm btn-danger" %></th>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class = "col-8 offset-1">
      <table class = "table">
        <thead>
          <tr>
            <th>Title</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to admin_post_path(post.id) do %>
                <%= image_tag post.get_image, size:"50x50" %>
                <%= post.title %>
              <% end %>
            </td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td>
              <%= link_to "Edit", edit_admin_post_path(post.id), class: "btn btn-sm btn-success" %>
              <%= link_to "Delete", admin_post_path(post.id), method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

