<div class="container my-5">
  <div class="h4 pb-2 mb-4 border-bottom border-secondary">
    Edit this Post
  </div>
  <%= render "layouts/errors", obj: @post %>
  <%= form_with model: [:admin, @post] do |f| %>
    <div class="form-group col-4">
      <label>Title</label>
      <%= f.text_field :title, autofocus: true, placeholder:"Name this riff", class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <label>Body</label>
    <%= f.text_field :body, placeholder:"Describe this riff", class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <label>Image</label>
      <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
    </div>
    <div class="col-4">
      <button type="submit" class="btn btn-sm btn-success">Save changes</button>
    </div>
  <% end %>
</div>