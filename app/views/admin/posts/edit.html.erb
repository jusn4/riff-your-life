<div class="container my-5">
  <h2>投稿編集</h2>
  <%= render "layouts/errors", obj: @post %>
  <%= form_with model: [:admin, @post] do |f| %>
    <div class="form-group col-4">
      <label>Title</label>
      <%= f.text_field :title, autofocus: true, placeholder:"名前", class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <label>Body</label>
    <%= f.text_field :body, placeholder:"詳細", class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <label>Image</label>
      <%= f.file_field :image, placeholder: "画像", accept: "image/*", class:"form-control-file" %>
    </div>
    <div class="col-4">
      <button type="submit" class="btn btn-sm btn-success">変更を保存</button>
    </div>
  <% end %>
</div>