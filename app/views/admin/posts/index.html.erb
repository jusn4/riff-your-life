<div class = "container my-5">
  <div class = "row">
      <table class = "table">
        <thead>
          <tr>
            <th>Title</th>
            <th></th>
            <th>Creater</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to admin_post_path(post.id) do %>
                  <%= image_tag post.get_image, size:"50x50" %>
                  <%= post.title %>
                <% end %>
            </td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td>
              <%= link_to admin_user_path(post.user.id) do %>
                <%= image_tag post.user.get_image, size:"50x50" %>
                <%= post.user.name %>
              <% end %>
            </td>
            <td><%= link_to "Edit", edit_admin_post_path(post),class:"btn btn-md btn-success" %></td>
            <td><%= link_to "Delete", admin_post_path(post), method: :delete, class:"btn btn-md btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
