<div class = "container">
  <div class = "row">
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th></th>
            <th>Creater</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.get_image, size:"50x50" %></td>
            <td><%= post.title %></td>
            <td><%= audio_tag url_for(post.music), controls: true %>
            </td>
            <td><%= image_tag post.user.get_image, size:"50x50" %></td>
            <td><%= post.user.name %></td>
            <td><%= link_to "編集", edit_post_path(post),class:"btn btn-md btn-success" %></td>
            <td><%= link_to "削除", post_path(post), method: :delete, class:"btn btn-md btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
